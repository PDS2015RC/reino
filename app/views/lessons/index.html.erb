<p id="notice"><%= notice %></p>
<div class="container">
<div class="panel panel-default">
<div class="panel-heading">Aulas</div>
<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Url</th>
      <th>Subject</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lessons.each do |lesson| %>
      <tr>
        <td><%= lesson.url %></td>
        <td><%= lesson.subject %></td>
        <td><%= link_to 'Show', lesson %></td>
        <td><%= link_to 'Edit', edit_lesson_path(lesson) %></td>
        <td><%= link_to 'Destroy', lesson, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
<%= link_to 'Nova aula', new_lesson_path, class: 'btn btn-primary'%>
</div>
<br>


<br><br>
</div>