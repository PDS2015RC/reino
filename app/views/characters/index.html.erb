<p id="notice"><%= notice %></p>

<h1>Listing Characters</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Xp</th>
      <th>Gold</th>
      <th>Hair</th>
      <th>Skin</th>
      <th>Shirt</th>
      <th>Pants</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @characters.each do |character| %>
      <tr>
        <td><%= character.name %></td>
        <td><%= character.xp %></td>
        <td><%= character.gold %></td>
        <td><%= character.hair %></td>
        <td><%= character.skin %></td>
        <td><%= character.shirt %></td>
        <td><%= character.pants %></td>
        <td><%= character.User %></td>
        <td><%= link_to 'Show', character %></td>
        <td><%= link_to 'Edit', edit_character_path(character) %></td>
        <td><%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

